{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Num_commande</th>
                <th>Total €</th>
                <th>TVA %</th>
                <th>Mantant_TVA €</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.numCommande }}</td>
                <td>{{ commande.total }} €</td>
                <td>{{ commande.TVA }} %</td>
                <td>{{ commande.mantantTVA }} €</td>
                <td>{{ commande.date ? commande.date|date('d-m-Y à H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_commande_show', {'id': commande.id}) }}">show</a>
                    <a href="{{ path('app_commande_edit', {'id': commande.id}) }}">edit</a>
                    <a href="{{ path('app_commande_rapport', {'id': commande.id}) }}">rapport</a>
                    <a href="{{ path('app_commande_rapport_download', {'id': commande.id}) }}">down</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commande_new') }}">Create new</a>
{% endblock %}
