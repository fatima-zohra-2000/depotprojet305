{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ vich_uploader_asset(produit, 'imageFile') }}" ></td>
                
            </tr>
            <tr>
                <th>Ordonnance</th>
                <td>{{ produit.ordonnance ? 'Oui' : 'Non' }}</td>
            </tr>
            {% if produit.stock is not null %}
                    {% for stock in produit.stock %}
                        <tr>
                            <th>Quantit√©</th>
                            <td>
                                    {{ stock.quantite }}
                            </td>
                        </tr>
                        <tr>
                            <th>Fournisseur</th>
                            <td>
                                    {{ stock.fournisseurId.nom }}
                            </td>
                        </tr>
                    {% endfor %}
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_index') }}">back to list</a>

    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
